#if VERTEX_SHADER
// IN
in vec3 a_vertex;
#if TEXTURE
in vec2 a_coord;
#endif
#if NORMAL
in vec3 a_normal;
#endif
// UNIFORM
uniform mat4 projection;
uniform mat4 view;

// OUT
#if TEXTURE
out vec2 v_coord;
#endif
#if NORMAL
out vec3 v_normal;
#endif

// MAIN
void main()
{
   vec4 position = vec4(a_vertex.xyz,1);
#if TEXTURE
   v_coord = a_coord;
#endif

   gl_Position = projection * view * position;
}
#endif /* VERTEX SHADER */

#if FRAGMENT_SHADER
// IN
#if TEXTURE
in vec2 v_coord;
#endif
#if NORMAL
in vec3 v_normal;
#endif

// UNIFORM
#if TEXTURE
uniform sampler2D texture0;
#endif
#if COLOR
uniform vec4 color;
#endif

// MAIN
void main()
{
#if TEXTURE
   FRAGMENT_COLOR = texture2D(texture0, v_coord);
#else
   FRAGMENT_COLOR = vec4(1,1,1,1);
#endif
}
#endif /* FRAGMENT SHADER */
